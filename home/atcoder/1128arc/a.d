void main() {
  problem();
}

void problem() {
  auto A = scan!long;
  auto B = scan!long;
  auto X = scan!long;
  auto Y = scan!long;

  long solve() {
    long ans = X;
    if (A > B) A--;

    while(A != B) {
      A += (B - A > 0) ? 1 : -1;
      ans += min(2*X, Y); 
    }

    return ans;
  }

  solve().writeln;
}

