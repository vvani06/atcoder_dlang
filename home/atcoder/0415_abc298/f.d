void problem() {
  auto N = scan!int;
  auto RCX = scan!long(3 * N).chunks(3);

  auto solve() {
    long[long] sumC, sumR;

    alias Coord = Tuple!(long, "r", long, "c");
    long[Coord] X;
    
    long maxR, maxC, maxRi, maxCi;
    foreach(rcx; RCX) {
      // rcx.deb;
      long r = rcx[0];
      long c = rcx[1];
      long x = rcx[2];
      sumR[r] += x;
      sumC[c] += x;
      // [maxRi, maxCi].deb;
      if (maxR.chmax(sumR[r])) maxRi = r;
      if (maxC.chmax(sumC[c])) maxCi = c;
      // [maxRi, maxCi].deb;
      X[Coord(r, c)] = x;
    }

    long ans;
    foreach(r; sumR.keys) {
      ans = max(ans, sumR[r] + sumC[maxCi] - X.get(Coord(r, maxCi), 0));
    }
    foreach(c; sumC.keys) {
      ans = max(ans, sumR[maxRi] + sumC[c] - X.get(Coord(maxRi, c), 0));
    }
    return ans;
  }

  outputForAtCoder(&solve);
}

