void main() {
  problem();
}

void problem() {
  const N = scan!int;
  const M = scan!int;
  const A = scan!int(N);

  string solve() {
    const votesCount = A.sum();
    
    int items;
    foreach(a; A) if (a*4*M >= votesCount) items++;

    return items >= M ? "Yes" : "No";
  }

  solve().writeln;
}

