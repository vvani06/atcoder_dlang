void main() {
  problem();
}

void problem() {
  auto N = scan!long;
  auto P = N.iota.map!(_ => Point(scan!long, scan!long)).array;

  void solve() {
    long ans;

    foreach(i, p; P[0..$-1]) {
      foreach(q; P[i+1..$]) {
        long dx = (p.x - q.x).abs;
        long dy = (p.y - q.y).abs;
        if (dy <= dx) ans++;
      }
    }

    ans.writeln;
  }

  solve();
}

