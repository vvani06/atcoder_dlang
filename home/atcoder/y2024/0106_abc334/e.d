void problem() {
  auto N = scan!int;
  auto M = scan!int;
  auto A = scan!int(N);
  auto E = scan!int(2 * M).chunks(2);

  auto solve() {
    auto uf = UnionFind(N);
    foreach(ref e; E) {
      e[0]--; e[1]--;
      if (A[e[0]] == A[e[1]]) uf.unite(e[0], e[1]);
    }

    auto graph = new int[][](N, 0);
    foreach(e; E) {
      auto f = uf.root(e[0]);
      auto t = uf.root(e[1]);
      if (A[f] < A[t]) graph[f] ~= t;
      if (A[t] < A[f]) graph[t] ~= f;
    }
    
    auto sorted = topologicalSort(graph).filter!(a => uf.root(a) == a).array;
    sorted.deb;

    auto scores = new int[](N);
    scores[uf.root(0)] = 1;
    foreach(f; sorted) {
      if (scores[f] == 0) continue;

      foreach(t; graph[f]) {
        scores[t].chmax(scores[f] + 1);
      }
    }

    return scores[uf.root(N - 1)];
  }

  outputForAtCoder(&solve);
}

